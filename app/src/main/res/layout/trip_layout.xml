                android:text="DROP TIME" />

            <EditText
                android:id="@+id/droptime"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="290dp"
                android:ems="10"
