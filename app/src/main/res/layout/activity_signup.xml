<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.programunlocked.travenu.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_gradient" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="110dp"
        android:id="@+id/layoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rec_gradientone"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile picture" />

        <Button
            android:id="@+id/choose_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rec_gradient"
            android:text="Choose"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="6dp"/>
        <!--<Button
            android:id="@+id/upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:layout_marginBottom="10dp"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username" />

        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0088cc"
            android:drawablePadding="20dp"
            android:hint="Username"
            android:textColorLink="@color/colorPrimary"
            android:textCursorDrawable="@null" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />

        <EditText
            android:id="@+id/Textemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0088cc"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_person"
            android:hint="Email"
            android:textColorLink="@color/colorPrimary"
            android:textCursorDrawable="@null" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/Textpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:backgroundTint="#0088cc"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_lock_black_24dp"
            android:hint="********"
            android:inputType="textPassword"
            android:textColorLink="@color/colorPrimary"
            android:textCursorDrawable="@null" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="Confirm Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/confirmpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:backgroundTint="#0088cc"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_lock_black_24dp"
            android:hint="********"
            android:inputType="textPassword"
            android:textColorLink="@color/colorPrimary"
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rec_gradient"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#FFF" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Already have an account?" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:onClick="sign_inone"
            android:textColor="@color/colorPrimary"
            android:layout_weight="0.5"
            android:gravity="center"/>

    </LinearLayout>

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Travenu Sign Up"
        android:textStyle="bold"
        android:textSize="30dp"
        android:paddingTop="45dp"
        android:gravity="center"/>-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/show_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_round" />

</RelativeLayout>

